@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboardEmployee.cshtml";
    var firstName = ViewData["firstName"];
    var lastName = ViewData["lastName"];
}  
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-7 align-self-center">
                    <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Welcome, <span class="page-title text-truncate text-dark font-weight-lighter mb-1"> @firstName @lastName!</span></h3>
                    <div class="d-flex align-items-center">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item active">
                                    <a href="https://localhost:44389/Dashboard/Employee">Dashboard</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="col-5 align-self-center">
                    <div class="customize-input float-right">
                        @*<select class="custom-select custom-select-set form-control bg-white border-0 custom-shadow custom-radius">
                            <option selected>Aug 19</option>
                            <option value="1">July 19</option>
                            <option value="2">Jun 19</option>
                        </select>*@
                        <p class=" form-control bg-white border-0 custom-shadow custom-radius"><span id="datetime"></span></p>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- *************************************************************** -->
            <!-- Start First Cards -->
            <!-- *************************************************************** -->
            <div class="card-group">
                <div class="card border-right">
                    <div class="card-body">
                        <div class="d-flex d-lg-flex d-md-block align-items-center">
                            <div>
                                <div class="d-inline-flex align-items-center requestWaiting">
                                    @* Jumlah request waiting *@
                                </div>
                                <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Waiting for Approval</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted"><i class="icon-clock"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card border-right">
                    <div class="card-body">
                        <div class="d-flex d-lg-flex d-md-block align-items-center">
                            <div>
                                <div class="d-inline-flex align-items-center requestApprove">
                                    @* Jumlah request approved *@
                                </div>
                                <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">
                                    Approved Request
                                </h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted"><i class="icon-check"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card border-right">
                    <div class="card-body">
                        <div class="d-flex d-lg-flex d-md-block align-items-center">
                            <div>
                                <div class="d-inline-flex align-items-center requestReject">
                                    @* Jumlah request rejected *@
                                </div>
                                <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Rejected Request</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted"><i class="icon-close"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex d-lg-flex d-md-block align-items-center">
                            <div>
                                <div class="d-inline-flex align-items-center requestReturn">
                                    @* Jumlah request returned *@
                                </div>
                                <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Returned Request</h6>
                            </div>
                            <div class="ml-auto mt-md-3 mt-lg-0">
                                <span class="opacity-7 text-muted"><i class="icon-action-undo"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- *************************************************************** -->
            <!-- End First Cards -->
            <!-- *************************************************************** -->
            <!-- *************************************************************** -->
            <!-- Start Chart -->
            <!-- *************************************************************** -->
            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Request Status</h4>
                            <canvas id="chartRequestEmployee" width="400" height="400"></canvas>
                            <ul class="list-style-none mb-0">
                                <li class="mt-1">
                                    <i class="icon-clock font-10 mr-2" style="color:red"></i>
                                    <span class="text-muted">Waiting for Approval</span>
                                </li>
                                <li class="mt-1">
                                    <i class="icon-check font-10 mr-2" style="color:lightseagreen"></i>
                                    <span class="text-muted">Approved Request</span>
                                </li>
                                <li class="mt-1">
                                    <i class="icon-close font-10 mr-2" style="color:mediumpurple"></i>
                                    <span class="text-muted">Rejected Request</span>
                                </li>
                                <li class="mt-1">
                                    <i class="icon-action-undo font-10 mr-2" style="color:orange"></i>
                                    <span class="text-muted">Returned Request</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Gender Ratio in Company</h4>
                            <canvas id="chartGenderCompany" width="400" height="400"></canvas>
                            <ul class="list-style-none mb-0">
                                <li class="mt-5">
                                    <i class="fas fa-male mr-2" style="color:palevioletred"></i>
                                    <span class="text-muted">Male</span>
                                </li>
                                <li class="mt-2">
                                    <i class="fas fa-female mr-2" style="color:gold"></i>
                                    <span class="text-muted">Female</span>
                                </li>
                                <li class="mt-2"></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Department Ratio</h4>
                            <canvas id="chartDepartmentCompany" width="400" height="400"></canvas>
                            <ul class="list-style-none mb-0">
                                <li class="mt-2">
                                    <i class="icon-wrench mr-2" style="color:palevioletred"></i>
                                    <span class="text-muted">Engineering</span>
                                </li>
                                <li class="mt-1">
                                    <i class="icon-people mr-2" style="color:royalblue"></i>
                                    <span class="text-muted">Human Resources</span>
                                </li>
                                <li class="mt-1">
                                    <i class="fas fa-dollar-sign mr-3" style="color:gold"></i>
                                    <span class="text-muted">Finance</span>
                                </li>
                                <li>
                                    <i class="fas fa-fax mr-2" style="color:lightseagreen"></i>
                                    <span class="text-muted">Administration</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- *************************************************************** -->
            <!-- End Charts -->
            <!-- *************************************************************** -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Page wrapper  -->
    <!-- ============================================================== -->
<!-- ============================================================== -->
<!-- End Wrapper -->
<!-- ============================================================== -->
<!-- End Wrapper -->
<!-- ============================================================== -->

<script>
    var d = new Date();
    const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec"];
    document.getElementById("datetime").innerHTML = d.getDate() + " " + months[d.getMonth()] + " " + d.getFullYear();
</script>