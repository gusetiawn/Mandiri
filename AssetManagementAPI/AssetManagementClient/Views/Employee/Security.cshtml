    <div class="container-fluid">
        <!-- *************************************************************** -->
        <div class="card">
            @*<div class="card-body">
                    <div class="d-flex justify-content-center">
                        <img src="https://demos.creative-tim.com/argon-dashboard/assets/img/theme/team-4.jpg" class="rounded-circle img-thumbnail" style="max-width:20%">
                    </div>
                </div>*@
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="heading-small text-dark mb-0"><i class="fas fa-key feather-icon"></i> Change Password</h3>
                            <h6 class="heading-small text-muted mb-4 mt-2">We recommend using a strong password that you don't use anywhere else</h6>
                            <hr class="my-0">
                        </div>
                    </div>
                    <h1></h1>
                    <!-- Change Password -->
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group focused">
                                    <label class="form-control-label" for="input-currentPass">Current Password</label>
                                    <input id="input-currentPass" class="form-control form-control-alternative" placeholder="Type your current password" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group focused">
                                    <label class="form-control-label" for="input-newPass">New Password</label>
                                    <input id="input-newPass" class="form-control form-control-alternative" placeholder="Use strong password" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group focused">
                                    <label class="form-control-label" for="input-newPass">Re-type New Password</label>
                                    <input id="input-newPassAgain" class="form-control form-control-alternative" placeholder="Retype new password" type="password">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <a href="#" class="btn btn-primary" onclick="ChangePassword()">Submit</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
