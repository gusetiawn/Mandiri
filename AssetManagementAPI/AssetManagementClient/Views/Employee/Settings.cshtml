@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboardEmployee.cshtml";
}
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-7 align-self-center">
                <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Account Setting</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb m-0 p-0">
                            <li class="breadcrumb-item active">
                                <a href="https://localhost:44389/Settings">Settings</a>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- *************************************************************** -->
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-7">
                        <h3 class="heading-small text-dark mb-0"><i data-feather="user" class="feather-icon"></i> Your Account</h3>
                        <h6 class="heading-small text-muted mb-4 mt-2">You can view your detailed information and edit profile</h6>
                        <hr class="my-0">
                    </div>
                    <div class="col-5 text-right">
                        <a href="https://localhost:44389/Settings/Profile/Employee" class="btn btn-primary"><i class="icon-pencil"></i> Edit</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-7">
                        <h3 class="heading-small text-dark mb-0"><i class="fas fa-key feather-icon"></i> Change Password</h3>
                        <h6 class="heading-small text-muted mb-4 mt-2">We recommend using a strong password that you don't use anywhere else</h6>
                        <hr class="my-0">
                    </div>
                    <div class="col-5 text-right">
                        <a href="https://localhost:44389/Settings/Security/Employee" class="btn btn-primary"><i class="fas fa-lock-open"></i> Change</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
</div>
