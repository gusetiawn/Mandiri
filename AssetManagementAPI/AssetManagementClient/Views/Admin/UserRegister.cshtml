                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb m-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="#">Menu</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    <a href="#">Register User</a>
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid mt-5">
            <a href="javascript:void(0)" class="btn btn-primary" data-toggle="modal" data-target="#addNewUser" data-placement="top" title="Add User"><i class="fas fa-user-plus"></i></a>
