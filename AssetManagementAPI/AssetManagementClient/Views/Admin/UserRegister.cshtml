<!-- Modal Add Employee-->
<div class="modal fade" onsubmit="return true" id="addNewUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAddNewUser">New User</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formAddNewUser" name="formAdd" class="needs-validation" novalidate>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="id">Id</label>
                            <input type="text" class="form-control" id="id" placeholder="Id" required>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>

                        </div>

                        <div class="form-group col-md-6">
                            <label for="contact">Contact</label>
                            <input type="number" class="form-control" id="contact" placeholder="08xx-xxxx-xxxx" required>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="Last Name" required>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="genderId">Gender</label>
                            <select class="form-control" id="genderId">
                                <option hidden>Choose</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="birthDate">Birth Date</label>
                            <input type="date" class="form-control" id="birthDate" required>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" placeholder="Address Now" required>
                        <div class="valid-feedback">
                        </div>
                        <div class="invalid-feedback">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="email">Email</label>
                            <input name="emailReg" type="email" class="form-control" id="email" placeholder="Your Mail" required>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                                Gunakan format email yang benar!
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="password">Password</label>
                            <input name="passReg" type="password" class="form-control" id="password" pattern="(?=.*[A-Za-z\d]).{8,}" placeholder="Use Strong Password!" required>
                            <small id="emailHelp" class="form-text text-muted">Minimum 8 Characters</small>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                                Minimum 8 Character!
                            </div>
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="departmentId">Department</label>
                            <select class="form-control" id="departmentId">
                                <option hidden>Choose</option>
                                <option value="1">Engineering</option>
                                <option value="2">Human Resources</option>
                                <option value="3">Finance</option>
                                <option value="4">Administration</option>
                            </select>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="roleId">Role</label>
                            <select class="form-control" id="roleId">
                                <option hidden>Choose</option>
                                <option value="1">Employee</option>
                                <option value="2">Admin</option>
                                <option value="3">Manager</option>
                            </select>
                            <div class="valid-feedback">
                            </div>
                            <div class="invalid-feedback">
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-primary text-white" onclick="AddNewUser(document.formAdd.passReg, document.formAdd.emailReg)">Submit</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
